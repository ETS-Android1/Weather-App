<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="50dp">
    <ImageView
        android:id="@+id/weatherIconBox"
        android:layout_margin="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src = "@drawable/ic_clear_sky"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="5"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/humidityBoxIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/humidity_new"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/windSpeedBoxIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/wind_speed"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/pressureBoxIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/pressure_icon2"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/windDirectionBoxIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/wind_speed"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/kIndexBoxIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/humidity_new"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/humidityBox"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/windSpeedBox"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/pressureBox"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"/>
        <TextView
            android:id="@+id/pishBox"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"/>
        <TextView
            android:id="@+id/kIndexBox"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#64b0d9ec"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#47a4d8ef"
                android:layout_weight="1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#64b0d9ec"/>
        </LinearLayout>
        <ListView
            android:id="@+id/daily_weather"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:padding="10dp"
            android:background="#3d000000"/>
    </FrameLayout>
</LinearLayout>